{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Values Schema for helm-primedb",
    "type": "object",
    "properties": {
        "kind": {
            "type": "string",
            "enum": [
                "Deployment",
                "StatefulSet"
            ],
            "description": "The type of workload to deploy.",
            "default": "Deployment"
        },
        "replicaCount": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of replicas for the workload.",
            "default": 1
        },
        "imagePullSecrets": {
            "type": "array",
            "items": {
                "type": "object"
            },
            "description": "Secrets for pulling images from private registries."
        },
        "revisionHistoryLimit": {
            "type": "integer",
            "description": "Number of old ReplicaSets to retain.",
            "default": 3
        },
        "image": {
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string",
                    "description": "The container image repository."
                },
                "pullPolicy": {
                    "type": "string",
                    "enum": [
                        "Always",
                        "IfNotPresent",
                        "Never"
                    ],
                    "default": "IfNotPresent"
                },
                "tag": {
                    "type": "string",
                    "description": "Overrides the image tag (defaults to appVersion)."
                }
            },
            "required": [
                "repository"
            ]
        },
        "service": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "ClusterIP",
                        "NodePort",
                        "LoadBalancer"
                    ],
                    "default": "ClusterIP"
                },
                "port": {
                    "type": "integer",
                    "default": 80
                },
                "targetPort": {
                    "type": [
                        "integer",
                        "string"
                    ],
                    "default": "http"
                },
                "protocol": {
                    "type": "string",
                    "enum": [
                        "TCP",
                        "UDP"
                    ],
                    "default": "TCP"
                },
                "name": {
                    "type": "string",
                    "default": "http"
                }
            }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "className": {
                    "type": "string",
                    "default": "nginx"
                },
                "annotations": {
                    "type": "object"
                },
                "hosts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "host": {
                                "type": "string"
                            },
                            "paths": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "path": {
                                            "type": "string"
                                        },
                                        "pathType": {
                                            "type": "string",
                                            "default": "Prefix"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "tls": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false
                        },
                        "secretName": {
                            "type": "string"
                        },
                        "reflectsFrom": {
                            "type": "string",
                            "description": "Source secret for Reflector annotation."
                        }
                    }
                }
            }
        },
        "ingressInternal": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "className": {
                    "type": "string",
                    "default": "nginx-internal"
                },
                "annotations": {
                    "type": "object"
                },
                "hosts": {
                    "type": "array"
                },
                "tls": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false
                        },
                        "secretName": {
                            "type": "string"
                        },
                        "reflectsFrom": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "persistence": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "claims": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "accessModes": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "size": {
                                "type": "string"
                            },
                            "storageClass": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "storageClasses": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "enabled": {
                        "type": "boolean",
                        "default": true
                    },
                    "default": {
                        "type": "boolean",
                        "default": false
                    },
                    "provisioner": {
                        "type": "string"
                    },
                    "allowVolumeExpansion": {
                        "type": "boolean"
                    },
                    "reclaimPolicy": {
                        "type": "string"
                    },
                    "volumeBindingMode": {
                        "type": "string"
                    },
                    "parameters": {
                        "type": "object"
                    }
                }
            }
        },
        "cronJobs": {
            "type": "array"
        },
        "extraObjects": {
            "type": "array"
        },
        "openTelemetry": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "mode": {
                    "type": "string",
                    "enum": [
                        "deployment",
                        "daemonset",
                        "statefulset"
                    ],
                    "default": "deployment"
                },
                "config": {
                    "type": "string"
                },
                "instrumentation": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false
                        },
                        "language": {
                            "type": "string",
                            "enum": [
                                "java",
                                "python",
                                "dotnet",
                                "nodejs"
                            ]
                        }
                    }
                }
            }
        }
    }
}