{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Values Schema for helm-primedb",
    "type": "object",
    "properties": {
        "global": {
            "type": "object",
            "properties": {
                "nameOverride": {
                    "type": "string"
                },
                "fullnameOverride": {
                    "type": "string"
                },
                "commonLabels": {
                    "type": "object"
                },
                "commonAnnotations": {
                    "type": "object"
                },
                "imagePullSecrets": {
                    "type": "array"
                }
            }
        },
        "workload": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string",
                    "enum": [
                        "Deployment",
                        "StatefulSet"
                    ],
                    "default": "Deployment"
                },
                "replicaCount": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 1
                },
                "revisionHistoryLimit": {
                    "type": "integer"
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "repository": {
                            "type": "string"
                        },
                        "pullPolicy": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "repository"
                    ]
                },
                "workingDir": {
                    "type": "string"
                },
                "command": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "args": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "env": {
                    "type": "array"
                },
                "resources": {
                    "type": "object"
                },
                "probes": {
                    "type": "object",
                    "properties": {
                        "startup": {
                            "type": "object"
                        },
                        "liveness": {
                            "type": "object"
                        },
                        "readiness": {
                            "type": "object"
                        }
                    }
                },
                "updateStrategy": {
                    "type": "object"
                },
                "terminationGracePeriodSeconds": {
                    "type": "integer"
                },
                "lifecycle": {
                    "type": "object"
                },
                "statefulset": {
                    "type": "object"
                },
                "deployment": {
                    "type": "object"
                },
                "podAnnotations": {
                    "type": "object"
                },
                "podSecurityContext": {
                    "type": "object"
                },
                "securityContext": {
                    "type": "object"
                },
                "nodeSelector": {
                    "type": "object"
                },
                "tolerations": {
                    "type": "array"
                },
                "affinity": {
                    "type": "object"
                },
                "priorityClassName": {
                    "type": "string"
                },
                "schedulerName": {
                    "type": "string"
                },
                "hostAliases": {
                    "type": "array"
                },
                "dnsPolicy": {
                    "type": "string"
                },
                "dnsConfig": {
                    "type": "object"
                },
                "initContainers": {
                    "type": "array"
                },
                "extraContainers": {
                    "type": "array"
                }
            }
        },
        "networking": {
            "type": "object",
            "properties": {
                "service": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "ClusterIP",
                                "NodePort",
                                "LoadBalancer"
                            ]
                        },
                        "port": {
                            "type": "integer"
                        },
                        "targetPort": {
                            "type": [
                                "integer",
                                "string"
                            ]
                        },
                        "protocol": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "ingress": {
                    "type": "object"
                },
                "ingressInternal": {
                    "type": "object"
                },
                "gateway": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "installCRDs": {
                            "type": "boolean"
                        },
                        "annotations": {
                            "type": "object"
                        },
                        "gatewayClassName": {
                            "type": "string"
                        },
                        "gatewayClass": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                },
                                "controllerName": {
                                    "type": "string"
                                }
                            }
                        },
                        "listeners": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "port": {
                                        "type": [
                                            "integer",
                                            "string"
                                        ]
                                    },
                                    "protocol": {
                                        "type": "string"
                                    },
                                    "allowedRoutes": {
                                        "type": "object"
                                    }
                                }
                            }
                        },
                        "routes": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "object",
                                "properties": {
                                    "enabled": {
                                        "type": "boolean"
                                    },
                                    "kind": {
                                        "type": "string"
                                    },
                                    "parentRefs": {
                                        "type": "array"
                                    },
                                    "hostnames": {
                                        "type": "array"
                                    },
                                    "matches": {
                                        "type": "array"
                                    },
                                    "rules": {
                                        "type": "array"
                                    }
                                }
                            }
                        }
                    }
                },
                "networkPolicy": {
                    "type": "object"
                }
            }
        },
        "config": {
            "type": "object",
            "properties": {
                "configFilesPath": {
                    "type": "string"
                },
                "extraConfigMaps": {
                    "type": "array"
                },
                "extraSecrets": {
                    "type": "array"
                },
                "extraEnvFromConfigMap": {
                    "type": "array"
                },
                "extraEnvFromSecret": {
                    "type": "array"
                },
                "sealedSecrets": {
                    "type": "object"
                },
                "externalSecret": {
                    "type": "object"
                },
                "secretStore": {
                    "type": "object"
                }
            }
        },
        "security": {
            "type": "object",
            "properties": {
                "serviceAccount": {
                    "type": "object"
                },
                "pdb": {
                    "type": "object"
                }
            }
        },
        "storage": {
            "type": "object",
            "properties": {
                "persistence": {
                    "type": "object"
                },
                "volumeClaimTemplates": {
                    "type": "array"
                },
                "volumes": {
                    "type": "array"
                },
                "volumeMounts": {
                    "type": "array"
                },
                "extraVolumes": {
                    "type": "array"
                },
                "extraVolumeMounts": {
                    "type": "array"
                }
            }
        },
        "scaling": {
            "type": "object",
            "properties": {
                "autoscaling": {
                    "type": "object"
                }
            }
        },
        "observability": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "monitoring": {
                    "type": "object"
                },
                "openTelemetry": {
                    "type": "object"
                }
            }
        },
        "cronJobs": {
            "type": "array"
        },
        "extraObjects": {
            "type": "array"
        },
        "extraLabels": {
            "type": "object"
        }
    }
}