{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Values Schema for helm-primedb",
    "type": "object",
    "properties": {
        "kind": {
            "type": "string",
            "enum": [
                "Deployment",
                "StatefulSet"
            ],
            "default": "Deployment"
        },
        "replicaCount": {
            "type": "integer",
            "minimum": 1,
            "default": 1
        },
        "nameOverride": {
            "type": "string",
            "default": ""
        },
        "fullnameOverride": {
            "type": "string",
            "default": ""
        },
        "imagePullSecrets": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "revisionHistoryLimit": {
            "type": "integer",
            "default": 3
        },
        "statefulset": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object"
                }
            }
        },
        "image": {
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string",
                    "enum": [
                        "Always",
                        "IfNotPresent",
                        "Never"
                    ],
                    "default": "IfNotPresent"
                },
                "tag": {
                    "type": "string"
                }
            },
            "required": [
                "repository"
            ]
        },
        "workingDir": {
            "type": "string"
        },
        "command": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "args": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "env": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "envFrom": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "resources": {
            "type": "object"
        },
        "startupProbe": {
            "type": "object"
        },
        "livenessProbe": {
            "type": "object"
        },
        "readinessProbe": {
            "type": "object"
        },
        "updateStrategy": {
            "type": "object"
        },
        "terminationGracePeriodSeconds": {
            "type": "integer",
            "default": 30
        },
        "lifecycle": {
            "type": "object"
        },
        "configMaps": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "claims": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "mountPath": {
                                "type": "string"
                            },
                            "subPath": {
                                "type": "string"
                            },
                            "readOnly": {
                                "type": "boolean",
                                "default": true
                            },
                            "defaultMode": {
                                "type": "integer",
                                "default": 420
                            },
                            "existingName": {
                                "type": "string"
                            },
                            "data": {
                                "type": "object"
                            },
                            "chartFile": {
                                "type": "string"
                            },
                            "chartFolder": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "mountPath"
                        ]
                    }
                }
            }
        },
        "secrets": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "claims": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "mountPath": {
                                "type": "string"
                            },
                            "subPath": {
                                "type": "string"
                            },
                            "readOnly": {
                                "type": "boolean",
                                "default": true
                            },
                            "defaultMode": {
                                "type": "integer",
                                "default": 420
                            },
                            "existingName": {
                                "type": "string"
                            },
                            "data": {
                                "type": "object"
                            },
                            "type": {
                                "type": "string",
                                "default": "Opaque"
                            }
                        },
                        "required": [
                            "name",
                            "mountPath"
                        ]
                    }
                }
            }
        },
        "secretStore": {
            "type": "object"
        },
        "externalSecret": {
            "type": "object"
        },
        "service": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "ClusterIP",
                        "NodePort",
                        "LoadBalancer"
                    ],
                    "default": "ClusterIP"
                },
                "port": {
                    "type": "integer",
                    "default": 80
                },
                "targetPort": {
                    "type": [
                        "integer",
                        "string"
                    ],
                    "default": "http"
                },
                "protocol": {
                    "type": "string",
                    "enum": [
                        "TCP",
                        "UDP"
                    ],
                    "default": "TCP"
                },
                "name": {
                    "type": "string",
                    "default": "http"
                }
            }
        },
        "ingress": {
            "type": "object"
        },
        "ingressInternal": {
            "type": "object"
        },
        "gateway": {
            "type": "object"
        },
        "hostAliases": {
            "type": "array"
        },
        "dnsPolicy": {
            "type": "string",
            "default": "ClusterFirst"
        },
        "dnsConfig": {
            "type": "object"
        },
        "persistence": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "storageClass": {
                    "type": "string"
                },
                "accessModes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "size": {
                    "type": "string"
                },
                "claims": {
                    "type": "array"
                }
            }
        },
        "storageClasses": {
            "type": "array"
        },
        "volumeClaimTemplates": {
            "type": "array"
        },
        "initContainers": {
            "type": "array"
        },
        "extraContainers": {
            "type": "array"
        },
        "volumes": {
            "type": "array"
        },
        "volumeMounts": {
            "type": "array"
        },
        "extraVolumes": {
            "type": "array"
        },
        "extraVolumeMounts": {
            "type": "array"
        },
        "monitoring": {
            "type": "object"
        },
        "openTelemetry": {
            "type": "object"
        },
        "serviceAccount": {
            "type": "object"
        },
        "networkPolicy": {
            "type": "object"
        },
        "podSecurityContext": {
            "type": "object"
        },
        "securityContext": {
            "type": "object"
        },
        "autoscaling": {
            "type": "object"
        },
        "pdb": {
            "type": "object"
        },
        "nodeSelector": {
            "type": "object"
        },
        "tolerations": {
            "type": "array"
        },
        "affinity": {
            "type": "object"
        },
        "priorityClassName": {
            "type": "string",
            "default": ""
        },
        "schedulerName": {
            "type": "string",
            "default": ""
        },
        "cronJobs": {
            "type": "array"
        },
        "extraObjects": {
            "type": "array"
        },
        "extraLabels": {
            "type": "object"
        },
        "podAnnotations": {
            "type": "object"
        },
        "commonAnnotations": {
            "type": "object"
        },
        "deployment": {
            "type": "object"
        }
    }
}